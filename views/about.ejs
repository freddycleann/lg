    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #fff;
            background-image: url('goldground.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        nav {
            display: flex;
            justify-content: center;
            padding: 20px 0;
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.7);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.5);
            z-index: 10;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            margin: 0 20px;
            font-size: 20px;
            padding: 12px 25px;
            border-radius: 30px;
            font-family: 'Cinzel', serif;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        nav a::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #ffcc33, #ffd700, #ffcc33);
            z-index: 1;
            transition: left 0.3s ease;
        }

        nav a:hover::before {
            left: 0;
        }

        nav a span {
            position: relative;
            z-index: 2;
        }

        nav a:hover span {
            color: #000;
        }

        .content-container {
            padding: 100px 20px 60px;
            max-width: 800px;
