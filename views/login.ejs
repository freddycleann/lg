<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Vivify-X Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;700&display=swap" rel="stylesheet">
    <style>
        /* Global Styles */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            color: #fff;
            background-image: url('goldground.jpg');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
        }

        nav {
            display: flex;
            justify-content: center;
            padding: 20px 0;
            position: fixed;
            top: 0;
            width: 100%;
            background: rgba(0, 0, 0, 0.7);
            box-shadow: 0 6px 10px rgba(0, 0, 0, 0.5);
            z-index: 10;
        }

        nav a {
            color: #fff;
            text-decoration: none;
            font-weight: bold;
            margin: 0 20px;
            font-size: 20px;
            padding: 12px 25px;
            border-radius: 30px;
            font-family: 'Cinzel', serif;
            position: relative;
            overflow: hidden;
            transition: all 0.3s ease;
        }

        nav a::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, #ffcc33, #ffd700, #ffcc33);
            z-index: 1;
            transition: left 0.3s ease;
        }

        nav a:hover::before {
            left: 0;
        }

        nav a span {
            position: relative;
            z-index: 2;
        }

        nav a:hover span {
            color: #000;
        }

        .auth-container {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            padding-top: 80px;
            box-sizing: border-box;
        }

        .auth-box {
            background: rgba(28, 28, 28, 0.9);
            padding: 50px;
            border-radius: 15px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.6), 0 0 15px rgba(212, 175, 55, 0.8);
            display: inline-block;
            max-width: 450px;
            margin: 0 auto;
            border: 3px solid #d4af37;
            text-align: center;
        }

        .auth-box h1 {
            font-family: 'Cinzel', serif;
            font-size: 36px;
            margin-bottom: 15px;
            color: transparent;
            background: linear-gradient(90deg, #c29d38, #e5c16d);
            -webkit-background-clip: text;
            background-clip: text;
        }

        .auth-box p {
            font-size: 18px;
            margin-bottom: 40px;
            font-family: 'Cinzel', serif;
            color: #fff;
            line-height: 1.5;
        }

        .button-frame {
            margin-bottom: 20px;
        }

        .button {
            display: inline-block;
            background: linear-gradient(90deg, #ffcc33, #ffd700, #ffcc33);
            color: #000;
            text-decoration: none;
            font-weight: bold;
            font-size: 18px;
            padding: 12px 25px;
            border-radius: 8px;
            transition: all 0.3s ease, box-shadow 0.3s ease;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
            border: 2px solid #b8860b;
            text-shadow: 0 0 8px rgba(255, 215, 0, 0.8);
        }

        .button:hover {
            background: linear-gradient(90deg, #ffd700, #ffcc33, #ffd700);
            color: #fff;
            transform: scale(1.05);
            box-shadow: 0 6px 15px rgba(0, 0, 0, 0.8);
        }

        footer {
            text-align: center;
            padding: 20px;
            background: rgba(0, 0, 0, 0.8);
            position: fixed;
            bottom: 0;
            width: 100%;
            color: #d4af37;
            font-family: 'Cinzel', serif;
            font-size: 14px;
        }

        input {
            width: 100%;
            padding: 10px;
            margin-bottom: 20px;
            border: 2px solid #d4af37;
            border-radius: 5px;
            background: rgba(28, 28, 28, 0.8);
            color: #fff;
            font-size: 16px;
        }

        input:focus {
            border-color: #ffd700;
            outline: none;
        }
    </style>
</head>
<body>
    <!-- Navigation -->
    <nav>
        <a href="/"><span>Home</span></a>
        <a href="/tools"><span>Tools</span></a>
        <a href="/about"><span>About</span></a>
        <a href="/contact"><span>Contact</span></a>
    </nav>

    <!-- Login Section -->
    <div class="auth-container">
        <div class="auth-box">
            <h1>Login</h1>
            <form id="loginForm">
                <input type="text" id="username" placeholder="Username" required>
                <input type="password" id="password" placeholder="Password" required>
                <button type="submit" class="button">Login</button>
            </form>
            <div id="errorPopup" style="display: none; color: red; margin-top: 10px;"></div>
            <p class="message">Don't have an account? <a href="/register">Register here</a></p>
        </div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2024 Vivify-X. All rights reserved.
    </footer>

    <script>
        document.getElementById('loginForm').addEventListener('submit', async function(event) {
            event.preventDefault();
            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            try {
                const response = await fetch('/auth/login', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({ username, password })
                });

                const data = await response.json();

                if (!response.ok) {
                    document.getElementById('errorPopup').textContent = data.error || 'Invalid credentials';
                    document.getElementById('errorPopup').style.display = 'block';
                } else {
                    window.location.href = data.redirectUrl;
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('errorPopup').textContent = 'Failed to connect to server';
                document.getElementById('errorPopup').style.display = 'block';
            }
        });
    </script>
</body>
</html>